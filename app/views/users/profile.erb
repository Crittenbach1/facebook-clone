<form action="/logout" method="get">
  <input type="submit" value="Log Out">
</form>

<h1><%= "#{@user.first_name} #{@user.last_name}" %></h1>

<%= "#{@user.birthday}" %><br>

<br>

<form action="/posts/new" method="post">
  <input type="text" name="content" value="What's on your mind?">
  <input type="submit" value="Post">
</form>

<% @posts.each do |post| %>
<p><%= "#{post.content}" %> </p>
<form action="/likes/<%="#{post.id}"%>" method="post">
  <input type="submit" name="view" value="View Likes">
</form>
<form action="/likes/new/<%="#{post.id}"%>" method="post">
  <input type="submit" name="like" value="Like">
</form>
<form action="/likes/delete/<%="#{post.id}"%>" method="post">
  <input type="submit" name="unlike" value="Unlike">
</form>
<form action="/posts/delete/<%="#{post.id}"%>" method="post">
  <input type="submit" name="delete" value="Delete Post">
</form>

<% end %>
